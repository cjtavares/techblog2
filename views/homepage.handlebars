 <section>
   {{#each posts as |post|}}
      <div>
        <h4>
          <a class="name title " href="/post/{{id}}">{{post.post_title}}</a>
        </h4>
        <p>Posted by {{post.user.username}} on {{format_date post.createdAt}}</p>
        <p>{{post.body}}</p>
      </div>
    {{/each}}
  </section>